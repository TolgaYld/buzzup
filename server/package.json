{
  "name": "root",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "i18next": "^24.2.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "mongoose": "^8.9.6",
    "winston": "^3.17.0",
    "winston-mongodb": "^6.0.0"
  },
  "devDependencies": {
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "lerna": "^8.1.9",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "rewire": "^7.0.0",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.0.0"
  },
  "scripts": {
    "dev": "lerna run dev --parallel --stream -- --ignore core",
    "start": "lerna run start --parallel --stream -- --ignore core"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "prettier/prettier": "warn",
      "no-unused-vars": "off"
    }
  },
  "prettier": {
    "singleQuote": false
  }
}